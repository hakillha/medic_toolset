{
    "batch_size": 12,
    "im_size": [384, 384],
    "max_epoch": 40,
    "num_class": 1,
    "optimizer": {
        "name": "Adam",
        "epoch_to_drop_lr": [4, 8],
        "lr": [1e-3, 5e-4, 25e-5]
    },
    "loss": "dice_loss",
    "eval": {
        "ct_interval": [-1200, 1800],
        "norm_by_interval": true
    },
    "preprocess": {
        "cropping": true,
        "cropping_ct_thres": 0.1,
        "cropping_train_randomness": 20,
        "resize": false
    }
}